{
  "name": "zecfaucet",
  "version": "0.1.0",
  "description": "Simple Zcash(ZEC) faucet built with Node.",
  "main": "server.js",
  "engines": {
    "node": "8.9.4"
  },
  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "./node_modules/.bin/mocha test/* --recursive --exit",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --exit",
    "linter": "./node_modules/.bin/jshint --config .jshintrc ./server.js ./test",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/super3/zecfaucet.git"
  },
  "author": "Shawn Wilkinson",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/super3/zecfaucet/issues"
  },
  "homepage": "https://github.com/super3/zecfaucet#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "rethinkdb": "^2.3.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.5",
    "mocha": "^4.1.0",
    "supertest": "^3.0.0"
  }
}
