{
  "name": "zfaucet",
  "version": "0.1.0",
  "description": "Simple Zcash(ZEC) faucet built with Node.",
  "main": "server.js",
  "engines": {
    "node": "8.11.1"
  },
  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "./node_modules/.bin/mocha test/* --recursive --exit",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --exit",
    "linter": "xo",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/super3/zfaucet.git"
  },
  "author": "Shawn Wilkinson",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/super3/zfaucet/issues"
  },
  "homepage": "https://github.com/super3/zfaucet#readme",
  "dependencies": {
    "apicache": "^1.2.0",
    "base58check": "^2.0.0",
    "body-parser": "^1.18.2",
    "decamelize": "^2.0.0",
    "dotenv": "^5.0.1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "request-promise": "^4.2.2",
    "rethinkdb": "^2.3.3",
    "stdrpc": "0.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^4.1.0",
    "nodemon": "^1.17.1",
    "sinon": "^4.4.2",
    "supertest": "^3.0.0",
    "xo": "^0.20.3"
  },
  "xo": {
    "rules": {
      "no-await-in-loop": "off",
      "curly": "off",
      "capitalized-comments": "off",
      "no-new": "off"
    }
  }
}
